<html>
<body>
<h2>
Welcome to the count page
</h2>
<h1>
    <%= session.counter %> visits and counting...
</h1>


<div id="contact-form">

    <form id="contact" method="post" action="/result">
        <fieldset>

            <label for="name">Name: </label>
            <input type="text" name="name"><br/>



            <label for="location">Location: </label>
            <select id="location" name="location">
                <optgroup label="location_options">
                    <option>Seattle</option>
                    <option>Tokyo</option>
                    <option>Spain</option>
                    <option>New York</option>
                </optgroup>
            </select>
            <br/>

            <label for="language">Fave lang: </label>
            <select id="language" name="language">
                <optgroup label="language options">
                    <option>Java</option>
                    <option>MEAN</option>
                    <option>Python</option>
                    <option>C#</option>
                </optgroup>
            </select>
            <br/>

            <!--<label for="website">Website: </label>-->
            <!--<input type="url" name="url"><br/>-->

            <label for="message">Question/Comment:</label><br/>
            <textarea name="message"></textarea><br/>

            <input type="submit" name="submit" id="submit" value="Send Message"/>

        </fieldset>
    </form>
</div>
<br/>
<!-- /end #contact-form -->


<hr/>

</body>
</html>